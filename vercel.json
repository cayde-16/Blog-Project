{ 
    "version": 2,
    "builds": [
      {
        "src": "studybud/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "studybud/wsgi.py"
      }
    ],
    "functions": {
      "api/*": {
        "runtime": "python3.9",
        "memory": 512,
        "includeFiles": [
          "studybud/*",
          "pyproject.toml",
          "poetry.lock"
        ],
        "excludeFiles": [
          "node_modules/*"
        ]
      }
    }
  }